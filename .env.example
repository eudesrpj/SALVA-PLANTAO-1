# Database (provisioned via Cloud SQL)
# Em Cloud Run, será injetado via Secret Manager
DATABASE_URL=postgresql://postgres:PASSWORD@HOST:5432/database_name?sslmode=require

# JWT Secrets (NUNCA commitar valores reais)
# Em Cloud Run, será injetado via Secret Manager
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Environment
NODE_ENV=production

# App URL (base pública do app)
APP_URL=https://appsalvaplantao.com.br

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email (Magic Link) - Google Workspace SMTP
# Opção 1: URL completa
EMAIL_SERVER=smtps://user%40domain.com:app_password@smtp.gmail.com:465
# Opção 2: host/porta/credenciais
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=465
EMAIL_SERVER_USER=seu_email@dominio.com
EMAIL_SERVER_PASS=app_password
EMAIL_FROM="Salva Plantão <seu_email@dominio.com>"

# Asaas
ASAAS_API_KEY=your_asaas_api_key
ASAAS_SANDBOX=true
ASAAS_ENV=sandbox
ASAAS_WEBHOOK_TOKEN=your_webhook_token
ASAAS_WEBHOOK_SECRET=your_webhook_secret
